<drawer  id="drawer">
    <frame >
       <tabs bg="#111111" layout_gravity="bottom" h="40" id="tabs"/>
    </frame>
        <vertical>
            <appbar bg="#111111" >
                <toolbar h="50" gravity="center" id="toolbar"/>
            </appbar>
            <viewpager id="viewpager" >
                <frame>
                    <ScrollView>
                        <vertical h="*" padding="8 8" id="tab1" >                    
                            <horizontal padding="8">
                                <Switch id="acces" text="无障碍" layout_weight="1" checked="{{auto.service != null}}" padding="8 8 8 8" />
                                <Switch id="window" text="悬浮窗" layout_weight="1" checked="{{auto.service != null}}" padding="8 8 8 8" />
                                <Switch id="capture" text="截图" layout_weight="1" checked="false" padding="8 8 8 8" />
                            </horizontal>
                        </vertical>
                    </ScrollView>
               </frame>
               <frame>
                    <card w="*" h="auto" margin="16 32" cardCornerRadius="8dp" cardElevation="1dp" gravity="center_vertical">
                        <vertical id="config" gravity="center" padding="8 8 8 0" h="auto">
                            <text h="42"gravity="center" text="高级设置"/>
                            <!-- <View bg="#000000" margin="0 0" w="*" h="1" /> -->
                            <text text="设置数据文件分享外链（蓝奏云）:"/>
                            <horizontal gravity="left">
                                <text text="链接：" />
                                <input textSize="14dp" text="https://fai1028.lanzous.com/iLdTbmkggyd" w="*" id="链接" gravity="center_vertical" /> 
                            </horizontal>
                            <horizontal gravity="left">
                                <text text="密码："/>
                                <input textSize="14dp" text="7x1z" id="密码" gravity="center_vertical" />
                            </horizontal>
                            <horizontal gravity="center">
                                <card h="30" w="120" margin="8 8" cardCornerRadius="8dp" cardElevation="1dp">
                                    <text id="更新链接" text="更新链接" gravity="center"/>
                                </card>
                                <card h="30" w="120" margin="8 8" cardCornerRadius="8dp" cardElevation="1dp">
                                    <text id="清空本地数据" text="清空本地数据" gravity="center"/>
                                </card>
                            </horizontal>
                        </vertical>
                    </card>
               </frame>
            </viewpager>
        </vertical>
        <frame layout_gravity="left" w="{{(device.width)*0.75}}px">
            <vertical scaleType="fitXY" >
                <frame gravity="center" h="100" bg="#00000000">

                </frame>
                <list id="menu">
                    <horizontal init.bg="?selectableItemBackground" w="*">
                        <img w="50" h="50" padding="16" src="{{this.icon}}" tint="#FFFFFF"/>
                        <text  textColor="white" text="{{this.title}}" layout_gravity="center"/>
                    </horizontal>
                </list>
            </vertical>
            <linear id="chatQQ" gravity="bottom">
                    <text h="40" w="*" gravity="center" text="»点此联系作者«"/>
            </linear>
        </frame>
</drawer>